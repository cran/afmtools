citHeader("To cite the afmtools package in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("afmtools")

citEntry(entry="manual",
	title = paste("{R} package \\texttt{afmtools}: ",
	" Estimation, Diagnostic and Forecasting Functions for ARFIMA models (version ", meta$Version, ")", sep=""),
	author = personList(as.person("J. Contreras-Reyes"),
	                     as.person("G. M. Goerg"),
			         as.person("W. Palma")),
address = "Universidad de Chile, Chile",
year = substr(meta$Date, 1, 4),
url = "http://cran.r-project.org/web/packages/afmtools",
textVersion = 
paste("Contreras-Reyes J., Goerg G. M., Palma W. (", substr(meta$Date, 1, 4), "). ",
"R package 'afmtools': Estimation, Diagnostic and Forecasting Functions for ARFIMA models", " (version ", meta$Version, "). ",
"URL http://cran.r-project.org/web/packages/afmtools",
sep="")
)


 